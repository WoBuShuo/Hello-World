<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.xx.hello.hellondk.KotlinActivity">
    <Button
        android:id="@+id/sql_in"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:text="插入"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/sql_out"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="删除"
        android:background="#00ffffff"
        app:layout_constraintTop_toTopOf="@+id/sql_in"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"/>
    <Button
        android:id="@+id/sql_select"
        android:text="查询"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/sql_out"/>

</android.support.constraint.ConstraintLayout>
