<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffffff"
              android:orientation="vertical">


    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textColor="#1eb0ea"
        android:layout_gravity="center_horizontal"
        android:text="发现新版本"
        android:textSize="19sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#1eb0ea"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"/>

    <TextView
        android:id="@+id/version_id"
        android:layout_width="wrap_content"
        android:textSize="13sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/version_size"
        android:layout_width="wrap_content"
        android:textSize="13sp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_width="wrap_content"
        android:textSize="13sp"
        android:text="更新内容"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="15dp"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/up_data_log"
        android:layout_width="wrap_content"
        android:textSize="13sp"
        android:layout_marginLeft="16dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="11dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_ok"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="@drawable/ok_btn_bg"
            android:text="立即更新"
            android:textColor="#ffffff"/>

        <Button
            android:id="@+id/dialog_cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:background="#d2cece"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:textColor="#939191"
            android:text="以后再说"/>
    </LinearLayout>


</LinearLayout>